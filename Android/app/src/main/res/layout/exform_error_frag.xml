<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/large_margin"
        android:paddingRight="@dimen/large_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/criteria_form_ex1_label_name_mandatory"
            android:id="@+id/name_labelfor"
            style="@style/BrandBody2"
            android:labelFor="@+id/editText"
            android:importantForAccessibility="no" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/name_textfield"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ab_transparent_tab_selector"
            android:foreground="@drawable/foregroundselector"/>

        <Button
            android:id="@+id/validate_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/BrandButton"
            android:text="@string/criteria_form_ex1_label_button"/>


</LinearLayout>