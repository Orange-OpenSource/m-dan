<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/headerCriteriaWhyLabel"
        style="@style/TextViewStandard.Title.Level2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:padding="@dimen/large_margin"
        android:screenReaderFocusable="true"
        android:text="@string/criteria_template_why"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/core_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headerCriteriaWhyDescription"
        style="@style/BrandBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="@dimen/large_margin"
        android:paddingEnd="@dimen/large_margin"
        android:paddingBottom="10dp"
        android:screenReaderFocusable="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/core_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/headerCriteriaRuleLabel"
        style="@style/TextViewStandard.Title.Level2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:padding="@dimen/large_margin"
        android:screenReaderFocusable="true"
        android:text="@string/criteria_template_rule"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/core_black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/headerCriteriaRuleDescription"
        style="@style/BrandBody1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="@dimen/large_margin"
        android:paddingEnd="@dimen/large_margin"
        android:paddingBottom="10dp"
        android:screenReaderFocusable="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/core_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/headerCriteriaListLabel"
        style="@style/TextViewStandard.Title.Level2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:screenReaderFocusable="true"
        android:minHeight="45dp"
        android:padding="@dimen/large_margin"
        android:text="@string/criteria_template_example"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/core_black"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>


