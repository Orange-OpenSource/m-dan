<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:animateLayoutChanges="false">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_infos"
            android:tint="@color/orange_digital_2"
            android:layout_above="@+id/textViewInfosDescription"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="60dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"/>

        <TextView
            android:id="@id/textViewInfosDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tb_talkbackgesture_links"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_above="@+id/textViewLicence"
            android:layout_centerHorizontal="true"
            android:textColorLink="@color/core_orange_dark"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@id/textViewLicence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tb_talkbackgesture_credits"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/font_size_extra_small"
            android:textColorLink="@color/core_orange_dark"
            android:layout_above="@+id/textViewStep"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/textViewStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/11"
            android:layout_above="@+id/buttonsView"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@id/buttonsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:weightSum="1">

            <Button
                android:id="@+id/buttonPrevious"
                android:background="@drawable/tuto_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/previous"
                android:textColor="@color/button_white_selector"
                android:focusable="true" />

            <Button
                android:id="@+id/buttonNext"
                android:background="@drawable/tuto_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/next"
                android:textColor="@color/button_white_selector"
                android:focusable="true" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>