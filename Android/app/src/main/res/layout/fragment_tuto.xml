<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:animateLayoutChanges="false">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgViewGesture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/talkbackgesture1"
            android:adjustViewBounds="true"
            android:layout_above="@+id/textViewGestureDescritpion"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="60dp"
            android:paddingRight="50dp"
            android:paddingLeft="50dp"/>

        <TextView
            android:id="@id/textViewGestureDescritpion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tb_talkbackgesture1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_above="@+id/textViewGestureSubDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <TextView
            android:id="@id/textViewGestureSubDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tb_talkbackgesture1_sub"
            android:textColor="@color/dark_grey"
            android:gravity="center"
            android:layout_above="@+id/textViewStep"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"/>

        <TextView
            android:id="@id/textViewStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/11"
            android:layout_above="@+id/buttonsView"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/dark_grey"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@id/buttonsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:weightSum="1">

            <Button
                android:id="@+id/buttonPrevious"
                android:background="@drawable/tuto_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/previous"
                android:textColor="@color/button_white_selector"
                android:focusable="true" />

            <Button
                android:id="@+id/buttonNext"
                android:background="@drawable/tuto_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/next"
                android:textColor="@color/button_white_selector"
                android:focusable="true" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>