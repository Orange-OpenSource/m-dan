<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/song_data_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/section1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:accessibilityHeading="true"
        android:text="@string/section1"
        android:textSize="@dimen/font_size_extra_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/content_section1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        android:textSize="@dimen/font_size_common"
        app:layout_constraintStart_toStartOf="@id/section1"
        app:layout_constraintTop_toBottomOf="@id/section1" />

    <TextView
        android:id="@+id/section2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:accessibilityHeading="true"
        android:text="@string/section2"
        android:textSize="@dimen/font_size_extra_large"
        app:layout_constraintStart_toStartOf="@id/section1"
        app:layout_constraintTop_toBottomOf="@id/content_section1" />

    <TextView
        android:id="@+id/content_section2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        android:textSize="@dimen/font_size_common"
        app:layout_constraintStart_toStartOf="@id/section1"
        app:layout_constraintTop_toBottomOf="@id/section2" />

    <TextView
        android:id="@+id/section3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:accessibilityHeading="true"
        android:text="@string/section3"
        android:textSize="@dimen/font_size_extra_large"
        app:layout_constraintStart_toStartOf="@id/section1"
        app:layout_constraintTop_toBottomOf="@id/content_section2" />

    <TextView
        android:id="@+id/content_section3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorem_ipsum"
        android:textSize="@dimen/font_size_common"
        app:layout_constraintStart_toStartOf="@id/section1"
        app:layout_constraintTop_toBottomOf="@id/section3" />
</androidx.constraintlayout.widget.ConstraintLayout>