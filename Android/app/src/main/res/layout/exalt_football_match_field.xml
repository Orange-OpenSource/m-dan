<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:importantForAccessibility="no">

    <ImageView
        android:id="@+id/football_field_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/field_image_height"
        android:scaleType="fitXY"
        android:src="@drawable/terrain_de_foot"
        android:importantForAccessibility="no"/>

    <com.orange.ease.dan.view.MatchFieldView
        android:id="@+id/match_field_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/football_field_image"
        android:layout_alignLeft="@id/football_field_image"
        android:layout_alignRight="@id/football_field_image"
        android:layout_alignTop="@id/football_field_image"
        android:importantForAccessibility="no"/>

</RelativeLayout>