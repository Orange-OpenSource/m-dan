<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/core_white"
    android:gravity="center_horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/criteria_ghostelement_ex1_return"
        android:id="@+id/btnok"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="271dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        style="@style/BrandButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/criteria_ghostelement_ex1_ghost"
        android:id="@+id/textViewContent"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        style="@style/BrandBody2"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal" />
</RelativeLayout>