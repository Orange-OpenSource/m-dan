<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:weightSum="1"
    android:id="@+id/tuileLayout"
    android:importantForAccessibility="no">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="0dp"
        android:importantForAccessibility="yes"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAccessibility="no"
            android:padding="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/logoorangeetmoi"
                android:adjustViewBounds="true"
                android:contentDescription="@string/criteria_img_ex2_image"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="7dp" />

            <TextView
                style="@style/BrandTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/criteria_img_ex2_logo"
                android:id="@+id/textView23"
                android:textSize="18sp"
                android:textAlignment="center"
                android:paddingLeft="20dp"
                android:textColor="@color/core_black"
                android:layout_alignTop="@id/imageView6"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/textView22"
                android:layout_alignLeft="@+id/textView22"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/criteria_img_ex2_content"
                android:id="@+id/textView22"
                android:paddingLeft="20dp"
                style="@style/BrandBody1"
                android:textColor="#333333"
                android:layout_below="@+id/textView23"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/imageView6"
                android:layout_toRightOf="@id/imageView6"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
