<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="3dp"
    android:weightSum="1">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:id="@+id/tableRow"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView10"
                android:adjustViewBounds="true"
                android:src="@drawable/musiclogo"
                android:importantForAccessibility="no" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/criteria_clickarea_ex1_song1"
                    android:id="@+id/textView30"
                    style="@style/BrandBody2"
                    android:textSize="16sp"
                    android:importantForAccessibility="no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/criteria_clickarea_ex1_song2"
                    android:id="@+id/textView31"
                    style="@style/BrandBody1"
                    android:importantForAccessibility="no" />

            </LinearLayout>

        </LinearLayout>

    </TableRow>

    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="@dimen/large_margin"
        android:layout_marginEnd="@dimen/large_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButtonplay"
            android:adjustViewBounds="true"
            android:background="@drawable/play_good_button_selector"
            android:clickable="false"
            android:layout_gravity="center"
            android:importantForAccessibility="yes" />

    </LinearLayout>


</LinearLayout>