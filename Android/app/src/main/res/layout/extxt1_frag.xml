<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ex1txt1"
        style="@style/BrandBody1"
        android:paddingRight="@dimen/medium_margin"
        android:paddingLeft="@dimen/medium_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/criteria_alt_ex1_txt1"
        android:id="@+id/ex2txt1"
        style="@style/BrandBody1"
        android:paddingRight="@dimen/medium_margin"
        android:paddingLeft="@dimen/medium_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/criteria_alt_ex1_txt2"
        android:id="@+id/ex3txt1"
        style="@style/BrandBody1"
        android:paddingRight="@dimen/medium_margin"
        android:paddingLeft="@dimen/medium_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/criteria_alt_ex1_txt3"
        android:id="@+id/ex4txt1"
        style="@style/BrandBody1"
        android:paddingRight="@dimen/medium_margin"
        android:paddingLeft="@dimen/medium_margin" />
</LinearLayout>