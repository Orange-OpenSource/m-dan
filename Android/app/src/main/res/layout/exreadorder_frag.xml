<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="@dimen/small_margin">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:id="@+id/volup"
                android:background="@drawable/volumeup"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:foreground="@drawable/foregroundselector" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:id="@+id/voldown"
                android:background="@drawable/volumedown"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:foreground="@drawable/foregroundselector"/>
        </LinearLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/remote1"
                style="@style/ButtonRemote"
                android:layout_row="0"
                android:layout_column="0"
                android:text="1"
                android:gravity="center"
                android:focusable="true" />

            <Button
                style="@style/ButtonRemote"
                android:id="@+id/remote4"
                android:layout_row="1"
                android:layout_column="0"
                android:text="4"
                android:gravity="center"
                android:focusable="true" />

            <Button
                style="@style/ButtonRemote"
                android:id="@+id/remote7"
                android:layout_row="2"
                android:layout_column="0"
                android:text="7"
                android:gravity="center"
                android:focusable="true" />

            <Button
                style="@style/ButtonRemote"
                android:id="@+id/remote2"
                android:layout_row="0"
                android:layout_column="1"
                android:text="2"
                android:gravity="center"
                android:focusable="true" />


            <Button
                style="@style/ButtonRemote"
                android:id="@+id/remote5"
                android:layout_row="1"
                android:layout_column="1"
                android:text="5"
                android:gravity="center"
                android:focusable="true" />

            <Button
                style="@style/ButtonRemote"
                android:id="@+id/remote8"
                android:layout_column="1"
                android:layout_row="2"
                android:text="8"
                android:gravity="center"
                android:focusable="true" />

            <Button
                style="@style/ButtonRemote"
                android:id="@+id/remote3"
                android:layout_row="0"
                android:layout_column="2"
                android:text="3"
                android:gravity="center"
                android:focusable="true" />

            <Button
                style="@style/ButtonRemote"
                android:id="@+id/remote6"
                android:layout_row="1"
                android:layout_column="2"
                android:text="6"
                android:gravity="center"
                android:focusable="true" />

            <Button
                style="@style/ButtonRemote"
                android:id="@+id/remote9"
                android:layout_row="2"
                android:layout_column="2"
                android:text="9"
                android:gravity="center"
                android:focusable="true" />

        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/small_margin">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:id="@+id/chaineplus"
                android:background="@drawable/chaineplus"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:foreground="@drawable/foregroundselector" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="65dp"
                android:id="@+id/chainemoins"
                android:background="@drawable/chainemoins"
                android:importantForAccessibility="yes"
                android:focusable="true"
                android:foreground="@drawable/foregroundselector"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        style="@style/ButtonRemote"
        android:id="@+id/remote0"
        android:layout_gravity="center_horizontal"
        android:text="0"
        android:gravity="center"
        android:focusable="true" />
</LinearLayout>
