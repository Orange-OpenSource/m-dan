<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/core_black">

    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">

    </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>

    <ImageButton
        android:id="@+id/imgButtonPrevious"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/chevron_left_selected"
        android:clickable="true"
        android:contentDescription="@string/criteria_contentcontrol_ex2_btn_previous"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:layout_marginBottom="53dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imgButtonPlay"
        android:layout_toLeftOf="@+id/imgButtonPlay"
        android:foreground="@drawable/foregroundselectorcarousel"/>

    <ImageButton
        android:id="@+id/imgButtonNext"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:background="@drawable/chevron_right_selected"
        android:clickable="true"
        android:contentDescription="@string/criteria_contentcontrol_ex2_btn_next"
        android:focusable="true"
        android:importantForAccessibility="yes"
        android:layout_alignTop="@+id/imgButtonPrevious"
        android:layout_toEndOf="@+id/imgButtonPlay"
        android:layout_toRightOf="@+id/imgButtonPlay"
        android:foreground="@drawable/foregroundselectorcarousel"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imgButtonPlay"
        android:background="@drawable/playor"
        android:adjustViewBounds="true"
        android:contentDescription="@string/criteria_contentcontrol_ex2_cd_launch"
        android:layout_alignBottom="@+id/imgButtonNext"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="40dp"
        android:foreground="@drawable/foregroundselectorcarousel"/>


</RelativeLayout>