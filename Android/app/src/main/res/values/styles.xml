<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="OrangeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/app_bg</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <item name="android:textViewStyle">@style/TextViewStandard</item>
        <item name="android:checkboxStyle">@style/Checkbox</item>
        <item name="android:radioButtonStyle">@style/RadioButton</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="EditText" parent="android:Widget.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textCursorDrawable">@color/accent_color</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Checkbox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_bg_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/radio_bg_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewStandard" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="TextViewStandard.Button">
        <item name="android:textColor">@color/button_text_selector</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewStandard.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStandard.Title.Level2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/core_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@color/core_white</item>
        <item name="android:textSize">@dimen/font_size_accessibility_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/small_margin</item>
    </style>

    <style name="ToolBar.style" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/action_bar_bg</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="popupTheme">@style/ToolBar.popup</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="titleTextAppearance">@style/ToolBar.title</item>
        <item name="android:itemTextAppearance">@style/ToolBar.popup</item>
    </style>

    <style name="ToolBar.title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolBar.popup"
        parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_common</item>
        <item name="overlapAnchor">false</item>
        <item name="android:overlapAnchor" tools:targetApi="lollipop">false</item>
    </style>

    <style name="BrandHeadline">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_extra_large</item>
    </style>
    <style name="BrandTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/core_white</item>
    </style>
    <style name="BrandSubhead">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_common</item>
    </style>
    <style name="BrandBody2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>
    <style name="BrandBody1">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>
    <style name="BrandCaption">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font_size_extra_small</item>
    </style>
    <style name="BrandButton">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_bg_selector</item>
        <item name="android:background">@color/core_orange_dark</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="BrandButtonNoFocused">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/core_white</item>
        <item name="android:background">@color/core_orange_dark</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="BrandBlackButton">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_black_bg_selector</item>
        <item name="android:background">@color/black</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="BrandWhiteButton">
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_white_selector</item>
        <item name="android:background">@drawable/border_black_on_white_button</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:height">30dp</item>
    </style>

    <style name="ButtonRemote">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/remote_text_selector</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:background">@drawable/remote_selector</item>
    </style>


</resources>