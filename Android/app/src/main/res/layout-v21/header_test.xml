    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/splitImageOptions"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/tests_illustration"
        android:importantForAccessibility="no" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/options_content_description"
        android:screenReaderFocusable="true"
        style="@style/TextViewStandard"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="@dimen/large_margin"
        android:background="@drawable/border"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/textViewDescriptionOptAxs"
        style="@style/TextViewStandard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="@dimen/medium_margin"
        android:paddingRight="@dimen/medium_margin"
        android:screenReaderFocusable="true"
        android:text="@string/test_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/test_content_list_title"
        android:id="@+id/textViewTitleListManualTest"
        style="@style/TextViewStandard"
        android:textStyle="bold"
        android:screenReaderFocusable="true"
        android:textSize="18sp"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:padding="@dimen/large_margin"
        android:layout_marginTop="@dimen/medium_margin" />

    <TextView
        android:id="@+id/textViewTitleListOtherTest"
        style="@style/TextViewStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:minHeight="45dp"
        android:padding="@dimen/large_margin"
        android:screenReaderFocusable="true"
        android:text="Autres tests"
        android:visibility="gone"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
