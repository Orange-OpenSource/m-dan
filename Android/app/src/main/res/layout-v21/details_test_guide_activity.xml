<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:touchscreenBlocksFocus="false"
        android:theme="@style/ToolBar.style" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewDescriptionContentPart1"
                style="@style/BrandBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitleExample"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="@dimen/medium_margin"
                android:screenReaderFocusable="true"
                android:paddingRight="@dimen/medium_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/core_black"
                android:textSize="14sp" />

            <Button
                android:id="@+id/buttonGuideTester"
                style="@style/BrandButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewContentTalkback"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/medium_margin"
                android:focusable="true"
                android:onClick="seeTalkback" />

            <TextView
                android:id="@+id/textViewDescriptionContentPart2"
                style="@style/BrandBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitleExample"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="@dimen/medium_margin"
                android:screenReaderFocusable="true"
                android:paddingRight="@dimen/medium_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/core_black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgTestExemple"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_margin="30dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textViewDescriptionContentPart3"
                style="@style/BrandBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitleExample"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:paddingLeft="@dimen/medium_margin"
                android:screenReaderFocusable="true"
                android:paddingRight="@dimen/medium_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/core_black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imgTestExample2"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_margin="30dp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textViewContentLinksGuideDev"
                style="@style/BrandBody1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewTitleExample"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:screenReaderFocusable="true"
                android:layout_marginBottom="10dp"
                android:autoLink="web"
                android:paddingLeft="@dimen/medium_margin"
                android:paddingRight="@dimen/medium_margin"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/core_black"
                android:textColorLink="@color/core_orange_dark"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

