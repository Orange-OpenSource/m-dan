<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/large_margin"
    android:paddingRight="@dimen/large_margin"
    android:paddingTop="@dimen/large_margin"
    android:paddingBottom="@dimen/large_margin"
    android:animateLayoutChanges="false"
    android:background="@drawable/list_item_white">

    <TextView android:id="@+id/textCategory"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="item"
        android:textColor="@color/list_item_text_selector"
        android:gravity="center_vertical"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/icon_list_chevron"
        android:tint="@color/list_chevron_selector"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"/>
</RelativeLayout>